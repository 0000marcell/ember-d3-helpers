{{#with (letter-frequency data) as |letters|}}

  {{#with (hash

    xScale=(band-scale
      letters
      (append 0 width)
    )

    yScale=(linear-scale
      (append 0 10)
      (append height 0)
    )

  ) as |scales|}}

    {{#if d3el}}




      {{shh
        (compute
          (pipe
            (d3-select-all 'path')
            (d3-data (array letters))
            (d3-join
              enter=(pipe
                (d3-append 'g')
                (d3-append 'path')
                (d3-attr 'class' 'area')
                (d3-style 'fill' 'steelblue')
                (d3-attr 'd'
                  (d3-area
                    scales.xScale
                    scales.yScale
                    xAccessor=xAccessor
                    yAccessor=yAccessor
                  )
                )
              )
              update=(pipe
                  (d3-attr 'class' 'area')
                  (d3-style 'fill' 'steelblue')
                  (d3-attr 'd'
                    (d3-area
                      scales.xScale
                      scales.yScale
                      xAccessor=xAccessor
                      yAccessor=yAccessor
                    )
                  )
              )
              exit=(pipe
                  (d3-remove)
              )
            )
          )
        d3el)
      }}

      {{!-- create x axis --}}

      {{shhh (compute (pipe
          (d3-append 'g')
          (d3-attr 'class' 'x axis')
          (d3-attr 'transform' (i 'translate(0,${h})' h=height))
        ) d3el)
      }}


      {{shhh (compute (pipe
          (d3-select-all '.x.axis')
          (d3-call scales.xScale)
          (d3-append 'text')
          (d3-attr 'fill' 'black')
          (d3-attr 'y' 6)
          (d3-attr 'dy' '0.7em')
          (d3-style 'text-anchor' 'end')
          (d3-text 'hello')

        ) d3el)
      }}

      {{/if}}

    {{/with}}

{{/with}}